<resources>
    <string name="app_name">PegCityTransit</string>

    <!--    Keys, default values, etc.  -->
    <string name="api_base_url">https://api.winnipegtransit.com/v2/</string>

    <!--    There are no doubles/float resource files that we can use, so we'll hack around that with this. -->
    <string name="downtown_winnipeg_latitude">49.895157</string>
    <string name="downtown_winnipeg_longitude">-97.139280</string>

    <!--    Date format used "yyyy-MM-dd'T'HH:mm:ss" Example: "2016-12-19T16:37:35" -->
    <string name="date_format">yyyy-MM-dd\'T\'HH:mm:ss</string>

    <!--    Font Path   -->
    <string name="default_font_path">fonts/bariol_regular.ttf</string>

    <!--    URLs    -->
    <!--    See https://developers.google.com/maps/documentation/static-maps/intro  -->
    <string name="static_map_url">https://maps.googleapis.com/maps/api/staticmap?center={center}&amp;zoom={zoom}&amp;size={width}x{height}&amp;markers={markers}&amp;scale=2&amp;key={key}</string>

    <!--    Permissions    -->
    <string name="location_permission_dialog_title">Allow access to this device\'s location?</string>
    <string name="location_permission_rational">Location services is required to find bus stops near your location.</string>
    <string name="location_permission_denied">This app uses location services to find bus stops near your location. If the permission has been permanently denied, it can be enabled from System Settings &gt; Apps &gt; \'PegCityTransit\'.</string>

    <!-- Bottom Tabs -->
    <string name="map">Map</string>
    <string name="my_stops">My Stops</string>
    <string name="routes">Routes</string>

    <!--    UI Labels   -->
    <string name="arriving_in">Arriving in {time}</string>
    <string name="departing_in">Departing in {time}</string>

    <string name="generic_error">Sorry. An error occurred.</string>
    <string name="no_bus_stops_in_that_area">Sorry. There are no bus stops in that area.</string>
    <string name="error_loading_bus_stops">Sorry. An error occurred while loading the bus stops in that area.</string>
    <string name="error_loading_bus_routes">Sorry. An error occurred while loading the bus routes.</string>
    <string name="error_loading_schedule">Sorry. An error occurred while loading the schedule for that bus stop.</string>

    <string name="try_again">Try Again</string>

</resources>
