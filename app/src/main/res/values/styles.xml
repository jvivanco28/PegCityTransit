<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="container_content" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/material_spacing_medium</item>
        <item name="android:paddingRight">@dimen/material_spacing_medium</item>
        <item name="android:paddingTop">@dimen/material_spacing_medium</item>
        <item name="android:paddingBottom">@dimen/material_spacing_medium</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="toolbar_button">
        <item name="android:background">@drawable/transparent_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_toolbar_button</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="toolbar_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="settings_card">
        <item name="android:paddingLeft">@dimen/material_spacing_medium</item>
        <item name="android:paddingRight">@dimen/material_spacing_medium</item>
        <item name="android:paddingTop">@dimen/material_spacing_small</item>
        <item name="android:paddingBottom">@dimen/material_spacing_small</item>
    </style>

</resources>
